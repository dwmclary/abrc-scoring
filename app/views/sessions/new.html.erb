<h1>ABR-C Scoring System</h1>
<% if flash[:alert] %>
    <p id="notice">
        <%= flash[:alert] %></p> 
<% end %>
<%= form_for @login, :url => {:controller => "sessions", :action => "create"} do |f| %> 
    <fieldset>
        <legend>Please Log In</legend>
        <div> 
            <label for="name">Name:</label>
            <%= f.text_field :name %>
        </div>
        <div>
            <label for="email">Email:</label>
            <%= f.text_field :email%>
        <div> 
            <label for="password">Password:</label> 
            <%= f.password_field :password %>
        </div>
        <div>
            <%= f.submit "Login"%>
        </div>
    </fieldset>
<%end%>
<%= link_to "Create a new account", :controller => "shooter", :action=> "new"%>