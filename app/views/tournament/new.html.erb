<%= form_for @tournament, :url => {:controller => "tournament", :action => "create"} do |f| %> 
    <fieldset>
        <legend>Tournament Information</legend>
        <div> 
            <label for="name">Tournament Name:</label>
            <%= f.text_field :name %>
        </div>
        <div> 
            <label for="distance">Distance:</label> 
            <%= f.text_field :distance %>
        </div>
        <div>
            <label for="shot_at">Shot On:</label>
            <%= f.date_select :shot_at%>
        <div>
            <%= f.submit "Create Tournament"%>
        </div>
    </fieldset>
<%end%>